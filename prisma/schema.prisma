generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Org {
  id            String @id @default(uuid())
  responsavel   String
  email         String @unique
  cep           String
  endereco      String
  whatsapp      String @unique
  password_hash String

  @@map("orgs")
}

model Localizacao {
  id     Int    @id @default(autoincrement())
  uf     String @unique
  cidade String

  @@map("localizacoes")
}
